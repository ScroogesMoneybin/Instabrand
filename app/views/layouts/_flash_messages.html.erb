<% if notice && notice.is_a?(Array) %>
    <%# flash message is array %>
  <% notice.each do |n| %>
    <p class="alert alert-success"> <%= n %> </p>
  <% end %>
<% elsif notice && notice.is_a?(String) %>
<%# flash message is string %>
  <p class="alert alert-success"> <%= notice %> </p>
<% end %>

<% if alert && alert.is_a?(Array) %>
  <% alert.each do |a| %>
    <p class="alert alert-danger" role="alert"> <%= a %> </p>
  <% end %>
<% elsif alert && alert.is_a?(String) %>
  <p class="alert alert-danger" role="alert"> <%= alert %> </p>
<% end %>